<UserControl x:Class="IDservice.View.LayoutGroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <DockPanel>
        <Grid Background="White" Width="500px" DockPanel.Dock="Left">
            <ItemsControl ItemsSource="{Binding SelectedLayoutGroup.Layouts}" Margin="20,40">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" FontSize="26" FontFamily="Segoe UI Light" Margin="0,0,0,10"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        <Grid Background="White" Width="300px" Margin="40,0,0,0" DockPanel.Dock="Left" HorizontalAlignment="Left">
            <StackPanel Margin="20,40">
                <Button Style="{StaticResource AddAppBarButtonStyle}"></Button>
            </StackPanel>
        </Grid>
    </DockPanel>
</UserControl>
